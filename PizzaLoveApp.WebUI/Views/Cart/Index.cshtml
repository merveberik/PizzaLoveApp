@model CartModel
@{
    ViewData["Title"] = "Index";
}

<h1>Sepet</h1>


<div class="row mt-5">
    <div class="col-md-8">
        @if (Model.CartItems.Count > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Ürün Adı</th>
                        <th>Ücreti</th>
                        <th>Adet</th>
                        <th>Toplam</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>
                                <img src="~/img/@item.ImageUrl" width="80" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("c")</td>
                            <td>@item.Quantity</td>
                            <td>@((item.Quantity * item.Price).ToString("c"))</td>
                            <td>
                                <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button class="btn btn-danger btn-sm" type="submit">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <div class="alert alert-warning">
                Sepetinizde Ürün Bulunmamaktadır
            </div>
        }

    </div>
    <div class="col-md-4">
        @if (Model.CartItems.Count > 0)
        {

            <div class="text-left">
                <h4>Sepet Özeti</h4>
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Sepet Toplamı</th>
                        <td>@Model.TotalPrice().ToString("c")</td>
                    </tr>
                    <tr>
                        <th>Teslimat Ücreti</th>
                        <td>Ücretsiz</td>
                    </tr>
                    <tr>
                        <th>Sipariş Toplamı</th>
                        <td>@Model.TotalPrice().ToString("c")</td>
                    </tr>
                    <tr>
                        <th>Toplam Kazanılacak PizzaLove Puan</th>
                        <td>@Model.TotalPrizePoint() PL</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <a href="/" class="btn btn-primary">
                    <i class="fas fa-arrow-left fa-sm"></i> Ürün Seç
                </a>
                <a href="/checkout" class="btn btn-primary">
                    <i class="fas fa-arrow-right fa-sm"></i> Sipariş ver
                </a>
            </div>
        }
    </div>
</div>

