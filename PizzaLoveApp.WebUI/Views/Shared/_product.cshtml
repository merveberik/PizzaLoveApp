@model Product
<div class="col-md-4 mb-3">
    <div class="card" style="width: 18rem;">
        <img src="~/img/@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
        <div class="card-body">
            <h5 class="card-title">
                <a href="#">@Model.Name</a>
            </h5>
            <p class="card-text">
                <i class="fas fa-lira-sign"></i> @Model.Price
            </p>

        </div>
        <div class="card-footer text-center">
            <a asp-controller="PizzaLove" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Detay</a>

            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="btn btn-outline-primary btn-sm ml-3">Sepete Ekle</button>
                </form>
            }
        </div>
    </div>
</div>