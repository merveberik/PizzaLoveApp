@model Product
<div class="col-md-4 mb-3">
    <div class="card" style="width: 18rem;">
        <img src="~/img/@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
        <div class="card-body">
            <h5 class="card-title">
                <a href="#">@Model.Name</a>
            </h5>
            <p class="card-text">
                <i class="fas fa-lira-sign"></i> @Model.Price
                @*<a href="#" class="btn btn-outline-primary btn-sm ml-3">Sepete Ekle</a>*@
            </p>

        </div>
        <div class="card-footer text-center">
            <a asp-controller="PizzaLove" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Details</a>
            <a href="#" class="btn btn-outline-primary btn-sm ml-3">Sepete Ekle</a>
        </div>
    </div>
</div>