@model ProductModel

@{
    ViewData["Title"] = "CreateProduct";
}

<h1>Kategori Ekle</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateProduct">
            <div class="form-group-row">
                <label class="col-md-2 col-form-label">Pizza Adı</label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group-row">
                <label class="col-md-2 col-form-label">Resim Adresi</label>
                <div class="col-md-10">
                    <input asp-for="ImageUrl" class="form-control" />
                </div>
            </div>
            <div class="form-group-row">
                <label class="col-md-2 col-form-label">Açıklama</label>
                <div class="col-md-10">
                    <textarea id="editor" asp-for="Description" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group-row">
                <label class="col-md-2 col-form-label">Fiyatı</label>
                <div class="col-md-10">
                    <input asp-for="Price" class="form-control" />
                </div>
            </div>
            <div class="form-group-row">
                <label class="col-md-2 col-form-label">Boyutu</label>
                <div class="col-md-10">
                    <input asp-for="Size" class="form-control" />
                </div>
            </div>
            <div class="form-group-row mt-2">
                <div class="col-md-10">
                    <button type="submit" class="btn btn-primary mt-4">Ürünü Ekle</button>
                </div>
            </div>
        </form>
    </div>
</div>
